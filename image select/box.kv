<MyFileChooser>:


  BoxLayout:
    size: root.size
    pos: root.pos
    orientation:"vertical"
    FileChooserIconView:
      id: filechooser
      path:"//storage//emulated//0"


  BoxLayout:
    size_hint_y:None
    height:30
    background:[1,1,1,1]

    Button:
      text:"cancel"
      on_release:root.cancel()
      size_hint:[ 3, 3]
      background_down:"Default1.jpg"
      background_normal:"Pressed1.jpg"

    Button:
      text:"descern"
      background_down:"Default1.jpg"
      background_normal:"Pressed1.jpg"
      size_hint:[ 3, 3]
      on_release:root.load(filechooser.path,filechooser.selection)


<BoxLayoutWidget>:
  orientation: 'vertical'

  canvas:
    Color:
      rgba: [1, 1, 1, 1]
    Rectangle:
      #size: self.size
      size: self.width + 20, self.height + 20
      #pos: self.pos
      pos: self.x - 10,self.y - 10
      #source: "2.jpg"


  BoxLayout:
    orientation:"horizontal"
    spacing: 0


  BoxLayout:
    orientation: 'horizontal'
    source:[0, 1, 1, .3]

    Button:
      id:1
      text: ""
      background_color: 0, 1, 1, .0

    BoxLayout:
      orientation:"vertical"

      Button:
        id:1
        text: "crema"
        background_color: 1, 1, 1,.4
        font_size: 35
      #size_hint_y: .3
      #size_hint_x: .3
        bold: True
        background_down:"Pressed.jpg"
        background_normal:"Default.jpg"
        on_release:root.Press()


      Button:
        id:1
        text: "select"
        background_color: 1, 1, 1,.4
        font_size: 35
      #size_hint_y: .3
      #size_hint_x: .3
        bold: True
        background_down:"Pressed.jpg"
        background_normal:"Default.jpg"
        on_release:root.show_load()


    Button:
      id:1
      text: ""
      background_color: 0, 1, 1, .0


  Label:
    text: 'wuxian'
    color: .2, .2, .9, 1
    italic:True
    text_size: cm(10), cm(10)
    halign: 'center'
    valign: 'center'
    underline: True
    markup: True
    line_height: 0.00001
    width: '0.00001px'
    size_hint_x: '0.1px'

<CameraClick>
  Camera:
    id: camera
    resolution: (640, 480)
    play: True
    #index: 1

  Button:
    text: 'load'   #截图
    size_hint_y: None
    height: '48dp'
    background_down:"Pressed.jpg"
    background_normal:"Default.jpg"
    on_press:root.capture()
    on_release: camera.play = not camera.play








